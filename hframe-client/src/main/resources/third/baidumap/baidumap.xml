<?xml version="1.0" encoding="UTF-8"?>
<descriptor>
    <gloable>
        <params>
            <javaPackage>com.hframe.client</javaPackage>
            <resourceFolder>third</resourceFolder>
        </params>
        <rules>
            <rule id="+AES">(+)AES(${this},${SECRET_KEY})</rule>
            <rule id="-AES">(-)AES(${this},${SECRET_KEY})</rule>
            <rule id="MD5">MD5(${address}${output}$${AK})</rule>
        </rules>
        <request>
            <publicparam name="sign" type="String" nullable="false" visiable="false" value="MD5(${address}${output}$${AK})" />
            <valuemapper name="mobile" nullable="false" visiable="true" value="(-)AES(${this},${SECRET_KEY})" />
        </request>
        <reponse>
            <publicparam name="result/message/*" type="BaiduMapResult" nullable="false" visiable="true" value="(-)AES(${this},${SECRET_KEY})" />
            <valuemapper name="mobile" nullable="false" visiable="true" value="(-)AES(${this},${SECRET_KEY})" />
        </reponse>
    </gloable>
    <interfaces>
        <interface url="geocoder/v2" name="getAddress" method="post" extend="true" message="json">
            <request load="head + body">
                <param name="address" type="String" nullable="false"  visiable="true" value="${address}" />
                <param name="output"  type="String"  nullable="false" visiable="false" value="json" />
                <param name="ak"  type="String"  nullable="false" visiable="false" value="$${ak}" />
                <param name="sign" type="String" nullable="false" visiable="false" value="MD5(${address}${output}$${AK})" />
                <param name="mobile" type="long" nullable="false" visiable="ture" value="(+)AES(${this},$${SECRET_KEY})" />
            </request>
            <response load="body" extend="true" >
                <param name="data/**"  type="HfcfgLoginPage"  nullable="false" visiable="true" value="(-)AES(${this},$${SECRET_KEY})" />
                <param name="**.mobile"  type="HfcfgLoginPage"  nullable="false" visiable="true" value="(-)AES(${this},$${SECRET_KEY})" />
            </response>
        </interface>
    </interfaces>
</descriptor>